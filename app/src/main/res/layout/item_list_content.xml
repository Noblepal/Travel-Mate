<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/one_place"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/holiday_item_bg"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="11"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/id_day_m_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:maxLines="2"
                android:text="Monday\n November 2019"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableLeft="@drawable/ic_people"
                android:text="2"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/id_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableLeft="@android:drawable/ic_menu_gallery"
                android:text="5"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_textSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Hokkaido, Japan"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="132dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/imageNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/japan" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>